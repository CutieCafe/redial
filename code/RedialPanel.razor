@using Sandbox;
@using Sandbox.UI;
@using System;

@namespace Redial

<style>
    .indicator {
        position: absolute;
        top: 100px;
        right: 100px;

        background-color: rgba( #111, 0.5 );

        font-family: 'Poppins';
        font-size: 30px;
        
        padding: 20px;

        font-weight: bold;
    }
</style>

<root class="indicator">
    @RedialPlacer.Current.CurrentWeapon
</root>

@code{
    TimeSince built = 0;

    protected override int BuildHash()
    {
        return HashCode.Combine(RedialPlacer.Current.CurrentWeapon, built);
    }
}